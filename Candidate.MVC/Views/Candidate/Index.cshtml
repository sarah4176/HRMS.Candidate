@model IEnumerable<HRMS.DTO.CandidateDTO>

@{
    ViewBag.Title = "Candidates";
}

<h2>Candidates</h2>

<form method="get" asp-action="Index">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" placeholder="Search Candidates" />
    <input type="submit" value="Search" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>National ID</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Application Date</th>
            <th>Expected Salary</th>
            <th>Status</th>
            <th>Job Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>@candidate.Name</td>
                <td>@candidate.NationalIdNumber</td>
                <td>@candidate.Address</td>
                <td>@candidate.Phone</td>
                <td>@candidate.Email</td>
                <td>@candidate.ApplicationDate.ToShortDateString()</td>
                <td>@candidate.ExpectedSalary</td>
                <td>@candidate.Status</td>
                <td>@candidate.JobTitle</td>
                <td>
                    <a asp-action="Details" asp-route-id="@candidate.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@candidate.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@candidate.Id">Delete</a> |
                    <form asp-action="ExportToEmployee" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@candidate.Id" />
                        <input type="submit" value="Export to Employee" class="btn-link" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
