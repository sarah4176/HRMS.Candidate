@model IEnumerable<HRMS.DTO.CandidateDTO>

@{
    ViewData["Title"] = "Candidates";
}

<h1>Candidates</h1>

<form asp-action="Index" method="get">
    <input type="text" name="searchTerm" value="@ViewData["SearchTerm"]" placeholder="Search candidates..." />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>National ID Number</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Application Date</th>
            <th>Expected Salary</th>
            <th>Status</th>
            <th>Job Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>@candidate.Name</td>
                <td>@candidate.NationalIdNumber</td>
                <td>@candidate.Address</td>
                <td>@candidate.Phone</td>
                <td>@candidate.Email</td>
                <td>@candidate.ApplicationDate.ToShortDateString()</td>
                <td>@candidate.ExpectedSalary</td>
                <td>@candidate.Status</td>
                <td>@candidate.JobTitle</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@candidate.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@candidate.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New Candidate</a>
</p>
