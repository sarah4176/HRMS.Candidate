@model HRMS.DTO.CandidateDTO

@{
    ViewData["Title"] = "Delete Candidate";
}

<h1>Delete Candidate</h1>

<h3>Are you sure you want to delete this candidate?</h3>

<div>
    <h4>Candidate Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">National ID Number</dt>
        <dd class="col-sm-10">@Model.NationalIdNumber</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Application Date</dt>
        <dd class="col-sm-10">@Model.ApplicationDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Expected Salary</dt>
        <dd class="col-sm-10">@Model.ExpectedSalary</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Job Title</dt>
        <dd class="col-sm-10">@Model.JobTitle</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" /> <!-- Passes the candidate's Id to the POST action -->
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
