@model HRMS.DTO.CandidateDTO

@{
    ViewBag.Title = "Candidate Details";
}

<h2>Candidate Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            National ID
        </dt>
        <dd class="col-sm-10">
            @Model.NationalIdNumber
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Application Date
        </dt>
        <dd class="col-sm-10">
            @Model.ApplicationDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Expected Salary
        </dt>
        <dd class="col-sm-10">
            @Model.ExpectedSalary
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt class="col-sm-2">
            Job Title
        </dt>
        <dd class="col-sm-10">
            @Model.JobTitle
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
