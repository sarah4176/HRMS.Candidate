@using HRMS.DTO
@model IEnumerable<EmployeeDTO>




@{
    ViewData["Title"] = "Employee Index";
}

<h1>Employee Index</h1>

<!-- Search Form -->
<form method="get" action="@Url.Action("SearchEmployee")" class="form-inline mb-3">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" placeholder="Search Employees" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Employee Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>National ID</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.NationalIdNumber</td>
                <td>@employee.Address</td>
                <td>@employee.Phone</td>
                <td>@employee.Email</td>
                <td>@employee.Position</td>
                <td>@employee.Salary</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">Details</a>
                    <!-- Additional actions like Edit and Delete can be added here -->
                </td>
            </tr>
        }
    </tbody>
</table>
